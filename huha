  <script>
    // Hero animated text typing (edit lines for your app)
    const heroTexts = [
      "Beautiful. Modern. Nature-inspired.",
      "Customizable for your presentation.",
      "Easily editable for your school project."
      // EDIT: Add/remove slogan lines here
    ];
    let typei = 0, line = 0;
    function typeText() {
      const el = document.getElementById('typedtext');
      if (!el) return;
      if (line >= heroTexts.length) return;
      let txt = heroTexts[line];
      typei++;
      el.textContent = txt.substring(0, typei);
      if (typei < txt.length) {
        setTimeout(typeText, 42 + Math.random()*30);
      } else {
        setTimeout(() => { // next line
          typei = 0; line++;
          if (line < heroTexts.length) {
            setTimeout(typeText, 800);
          } else if(line === heroTexts.length) {
            el.style.borderRightColor = "transparent";
          }
        }, 950);
      }
    }
    window.addEventListener('DOMContentLoaded',typeText);

    // SHOW/HIDE animation: section, cards, features, hiw steps, team cards
    function revealEls() {
      document.querySelectorAll('section').forEach(function(section){const rect=section.getBoundingClientRect();if(rect.top<window.innerHeight*0.92){section.classList.add('visible');}});
      document.querySelectorAll('.skill').forEach(function(el,i){const rect=el.getBoundingClientRect(); setTimeout(()=>{if(rect.top<window.innerHeight*0.99){el.classList.add('visible')}},i*120);});
      document.querySelectorAll('.project-card').forEach(function(el,i){const rect=el.getBoundingClientRect(); setTimeout(()=>{if(rect.top<window.innerHeight*0.98){el.classList.add('visible')}},i*110+250);});
      document.querySelectorAll('.feature-card').forEach(function(el,i){const rect=el.getBoundingClientRect();setTimeout(()=>{if(rect.top<window.innerHeight*0.95){el.classList.add('visible')}},i*190);});
      // Steps:
      document.querySelectorAll('.howitworks-steps li').forEach(function(el,i){const rect=el.getBoundingClientRect();setTimeout(()=>{if(rect.top<window.innerHeight*0.97){el.classList.add('visible')}},i*210);});
      // Team:
      document.querySelectorAll('.team-card').forEach(function(el,i){const rect=el.getBoundingClientRect();setTimeout(()=>{if(rect.top<window.innerHeight*0.99){el.classList.add('visible')}},i*181);});
    }
    window.addEventListener('scroll', revealEls);
    window.addEventListener('load', revealEls);
    // Animated scroll for nav links + highlight active section
    document.querySelectorAll('nav a').forEach(link=>{
      link.addEventListener('click',function(e){
        const target = document.querySelector(this.getAttribute('href'));
        if(target){
          e.preventDefault();
          target.scrollIntoView({ behavior:"smooth" });
        }
      });
    });
    window.addEventListener('scroll',()=>{
      let scrollPos = window.scrollY || document.documentElement.scrollTop;
      document.querySelectorAll('nav a').forEach(link=>{
        let sec = document.querySelector(link.getAttribute('href'));
        if(sec && sec.offsetTop <= scrollPos+100 && sec.offsetTop+sec.offsetHeight > scrollPos+100){
          link.classList.add('active');
        }else{
          link.classList.remove('active');
        }
      });
    },{passive:true});
  </script>
</body>
</html>
